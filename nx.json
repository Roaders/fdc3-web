{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "clean": {
            "dependsOn": [
                "^clean"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "cache": true,
            "options": {
                "outputPath": "{workspaceRoot}/dist/{projectName}",
                "rootDir": "{projectRoot}/src",
                "main": "index.ts",
                "tsConfig": "{projectRoot}/tsconfig.lib.json",
                "assets": [
                    {
                        "input": "{workspaceRoot}",
                        "glob": ".npmignore",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "package.json",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "README.md",
                        "output": "./"
                    }
                ]
            }
        },
        "test": {
            "dependsOn": [
                "^test"
            ],
            "outputs": [
                "{workspaceRoot}/build/coverage-results/",
                "{workspaceRoot}/build/test-results/"
            ],
            "cache": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "cache": true
        },
        "generate-docs": {
            "dependsOn": [
                "^generate-docs"
            ]
        },
        "start": {
            "dependsOn": [
                "^start"
            ]
        }
    },
    "defaultBase": "main",
    "release": {
        "version": {
            "generatorOptions": {
                "packageRoot": "projects/{projectName}/",
                "currentVersionResolver": "git-tag"
            }
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "eslint:lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "jest:test"
            }
        },
        {
            "plugin": "@nx/webpack/plugin",
            "options": {
                "buildTargetName": "build",
                "serveTargetName": "serve",
                "previewTargetName": "preview"
            }
        }
    ]
}