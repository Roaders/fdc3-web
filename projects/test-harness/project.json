{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "test-harness",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "options": {
                "webpackConfig": "{projectRoot}/webpack.config.ts"
            }
        },
        "serve": {
            "executor": "@nx/webpack:dev-server",
            "options": {
                "buildTarget": "build",
                "open": true,
                "hmr": true
            }
        }
    }
}