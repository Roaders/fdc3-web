{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "@morgan-stanley/fdc3-web",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "options": {
                "outputPath": "{workspaceRoot}/dist/",
                "rootDir": "{projectRoot}/src",
                "main": "index.ts",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "assets": [
                    {
                        "input": "{workspaceRoot}",
                        "glob": ".npmignore",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "package.json",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "README.md",
                        "output": "./"
                    }
                ]
            }
        }
    }
}